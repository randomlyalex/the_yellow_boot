{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "plugin:prettier/recommended",
        "prettier",
        "prettier/react",
        "plugin:testing-library/recommended"      
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
        ],
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "prettier/prettier": "error"
    }
}
